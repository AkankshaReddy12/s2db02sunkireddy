extends layout 
 
block content 
  h1= title 
  if (toShow == null) 
    h2 No instance Found
  else 
    - let shoeid = toShow._id 
    - let shoe_name = toShow.shoe_name 
    - let shoe_color = toShow.shoe_color 
    - let shoe_size = toShow.shoe_size
    div 
      div.row 
        div(class='shoeAttr mr-3') shoe ID is: 
        div #{shoeid} 
      div.row 
        div(class='shoeAttr mr-3') shoe shoe_name is: 
        div #{shoe_name} 
      div.row 
        div(class='shoeAttr mr-3') shoe shoe_color is: 
        div #{shoe_color} 
      div.row 
        div(class='shoeAttr mr-3') shoe shoe_size is: 
        div #{shoe_size}