extends layout 

block content
  h1= title
  -let items =results;

  div(class="container-fluid") 
    - let destination1 = `dispatch(\"/shoe/create\")`
    button.btn( class="btn-primary ml-1", onclick= destination1) Create
    div(class="row m-1") 
      each item in items  
        - let destination = `dispatch(\"/shoe/update?id=${item._id}\")`
        - let destination2 = `dispatch(\"/shoe/detail?id=${item._id}\")`
        - let destination3 = `dispatch(\"/shoe/delete?id=${item._id}\")` 
        div(class="row-sm-2", class="m-1") Item #{item.shoe_name}(#{item.shoe_color}) is #{item.shoe_size} 
          button.btn( class="btn-secondary ml-1", onclick= destination) Update
          button.btn( class="btn-warning ml-1", onclick= destination2) Detail
          button.btn( class="btn-danger ml-1", onclick= destination3) Delete
   
  script. 
    function dispatch(path){ 
      window.location.href=path 
    } 